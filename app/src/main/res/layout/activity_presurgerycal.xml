<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:background="@drawable/gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:text="Enter Data on the Eye"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/title"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="5"
                android:src="@mipmap/logo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Keratometry"
                    android:textSize="18sp"
                    android:layout_marginVertical="2dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp">

                    <TextView
                        android:id="@+id/kone_text"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:text="K1* :"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/kone_input"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/kone_text"
                        android:hint="Keratometry K1"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/kone_input"
                        android:gravity="center"
                        android:text="Dioptres"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp">

                    <TextView
                        android:id="@+id/ktwo_text"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:text="K2* :"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/ktwo_input"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/ktwo_text"
                        android:hint="Keratometry K2"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/ktwo_input"
                        android:gravity="center"
                        android:text="Dioptres"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="5dp"
                android:paddingVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/axial_length_text"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Axial Length* :"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/axial_length_input"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/axial_length_text"
                    android:gravity="center"
                    android:hint="Axial Length"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:background="@drawable/edittext_style"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/axial_length_input"
                    android:layout_marginLeft="5dp"
                    android:text="(mm)"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:paddingVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ac_depth_text"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="AC Depth :"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ac_depth_input"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ac_depth_text"
                    android:gravity="center"
                    android:hint="AC Depth"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:background="@drawable/edittext_style"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/ac_depth_input"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="(mm)"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:paddingVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lens_thickness_text"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Lens Thickness :"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/lens_thickness_input"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/lens_thickness_text"
                    android:hint="Lens Thickness"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:background="@drawable/edittext_style"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/lens_thickness_input"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="(mm)"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:paddingVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wtow_text"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="White-to-white :"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/wtow_input"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/wtow_text"
                    android:hint="White-to-white"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:background="@drawable/edittext_style"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/wtow_input"
                    android:gravity="center_vertical"
                    android:text="(mm)"
                    android:textSize="18sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:paddingVertical="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prior Refractive Error"
                    android:textSize="18sp"
                    android:layout_marginVertical="2dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp">

                    <TextView
                        android:id="@+id/spherical_text"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:text="Spherical :"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/spherical_input"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/spherical_text"
                        android:hint="Spherical"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/spherical_input"
                        android:gravity="center"
                        android:text="Dioptres"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="2dp">

                    <TextView
                        android:id="@+id/cylindrical_text"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:text="Cylindrical :"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/cylindrical_input"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/cylindrical_text"
                        android:gravity="center"
                        android:hint="Cylindrical"
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:background="@drawable/edittext_style"/>

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/cylindrical_input"
                        android:gravity="center"
                        android:text="Dioptres"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginVertical="5dp"
                android:paddingVertical="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lens_model_text"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Lens Model* :"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/lens_model_text"
                    android:prompt="@string/please_select" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/spinner"
                    android:gravity="center_vertical"
                    android:text="@string/please_select"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Lens Constants"
                    android:layout_marginVertical="2dp"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginVertical="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="2dp">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="A Constant SRK/T :"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="A Constant SRK/T"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_style"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="2dp">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="pACD :"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="pACD"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_style"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="2dp">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="Haigis a0 :"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Haigis a0"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_style"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="2dp">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="Haigis a1 :"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Haigis a1"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_style"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="2dp">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:gravity="left"
                            android:text="Haigis a2 :"
                            android:textSize="14sp" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:hint="Haigis a2"
                            android:inputType="numberDecimal"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_style"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_quick_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Quick Calculate"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_corner_button_bg"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Reset"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:padding="10dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/round_corner_button_bg"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>