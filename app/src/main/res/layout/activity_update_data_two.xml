<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateDataTwo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="0"
                android:paddingLeft="5dp"
                android:text="Update Data"
                android:textStyle="bold"
                android:textColor="@color/title"
                android:textSize="30sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="8"
                android:src="@mipmap/logo" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_update_data_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:paddingLeft="5dp"
            android:text="Enter patient data"
            android:textColor="@color/title"
            android:textSize="20sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ref_no_display_2"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:text="Reference No.: "
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_ref_no_display_value_2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/tv_ref_no_display_2"
                android:background="@drawable/edittext_style"
                android:gravity="center"
                android:hint="Reference Number"
                android:textSize="12sp"
                android:padding="5dp"
                android:textAlignment="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name_2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:gravity="center_vertical"
                android:text="Name : "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_name_2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_toRightOf = "@id/tv_name_2"
                android:gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_style"
                android:hint="Name"
                android:textAlignment="center" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_age_2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:gravity="center_vertical"
                android:text="Age : "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_age_2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_toRightOf = "@id/tv_age_2"
                android:background="@drawable/edittext_style"
                android:hint="Age"
                android:gravity="center"
                android:textAlignment="center" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_gender_2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:gravity="center_vertical"
                android:text="Gender : "
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_gender_2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_toRightOf="@id/tv_gender_2">

            </Spinner>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_eye_2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="7dp"
                android:text="Eye* : "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_eye_2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_style"
                android:hint="Eye"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_toRightOf= "@id/tv_eye_2"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_of_follow_up_2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_margin="7dp"
                android:text="Date of Follow-Up* : "
                android:textSize="18sp" />



            <TextView
                android:id="@+id/tv_date_2"
                android:layout_width="120dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_date_of_follow_up_2"
                android:layout_margin="7dp"
                android:text="Select Date "
                android:textSize="18sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:text="Refractive Error :  "
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_spherical_2"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:text="Spherical* : "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_spherical_refractive_error"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/edittext_style"
                android:hint="Refractive Error"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_toRightOf= "@id/tv_spherical_2"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:text="Dioptres"
                android:textSize="18sp"
                android:layout_toRightOf="@id/et_spherical_refractive_error"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="5dp"
            android:paddingVertical="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cylindrical_2"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:text="Cylindrical* : "
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_cylindrical_refractive_error"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/edittext_style"
                android:hint="Refractive Error"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_toRightOf= "@id/tv_cylindrical_2"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/et_cylindrical_refractive_error"
                android:text="Dioptres"
                android:textSize="18sp" />


        </RelativeLayout>

        <Button
            android:id="@+id/btn_update_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/round_corner_button_bg"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


    </LinearLayout>


</ScrollView>