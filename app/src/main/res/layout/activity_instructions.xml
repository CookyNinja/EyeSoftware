<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Instructions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Instructions"
                android:textColor="@color/title"
                android:textSize="28sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_weight="8"
                android:src="@mipmap/logo" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="50dp"
            android:text="This app is meant to be used by ophthalmologists. This app uses artificial intelligence to recommend the power of the intraocular lens to be used in a cataract surgery.\n\nPre-surgery calculations: A surgeon may use this page before the surgery to calculate the power of the intraocular lens to be given to a patient.\n\nSurgery-day data entry: A surgeon may use this page to enter information just after conducting a surgery.\n\nPost-surgery follow-up: A surgeon may use this page to enter the post-surgery refractive error on the day a patient comes for a follow-up.\n\nThis app uses artificial intelligence and improves by studying the data submitted by surgeons.

"
            android:textColor="@color/title"
            android:textSize="15sp" />

    </LinearLayout>

</ScrollView>