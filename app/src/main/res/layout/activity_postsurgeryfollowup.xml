<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostSurgeryFollowUp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_post_surgery_followup"
        android:paddingLeft="5dp"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Surgery Follow Up"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"

        />

    <TextView
        android:id="@+id/tv_enter_ref_no_of_patient"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Reference Number of Patient"
        />

    <EditText
        android:id="@+id/et_reference_number_2"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Reference Number, eg: 123"
        />

    <Button
        android:id="@+id/btn_submit_ref_no_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Submit"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:textSize="20dp"/>

</LinearLayout>