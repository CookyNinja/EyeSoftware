<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".PostSurgeryFollowUp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_surgery_day_data_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:paddingLeft="5dp"
            android:text="Post Surgery Follow-Up"
            android:textStyle="bold"
            android:textColor="@color/title"
            android:textSize="28sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="8"
            android:src="@mipmap/logo" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_enter_ref_no_of_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Enter Reference Number of Patient* : "
        android:textSize="20dp" />

    <EditText
        android:id="@+id/et_reference_number_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Reference Number"
        android:textAlignment="center"
        android:background="@drawable/edittext_style"/>

    <Button
        android:id="@+id/btn_submit_ref_no_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_corner_button_bg"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</LinearLayout>